<?import javafx.scene.control.ScrollPane?>
<AnchorPane fx:id="menuLayout" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MenuView">
    <fx:define>
        <fx:include fx:id="menuBarGrilled"      source="MenuBarGrilled.fxml" />
        <fx:include fx:id="menuBarDelicatessen" source="MenuBarDelicatessen.fxml" />
        <fx:include fx:id="menuBarDessert"      source="MenuBarDessert.fxml" />
        <fx:include fx:id="menuBarBeverage"     source="MenuBarBeverage.fxml" />
    </fx:define>
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ffc337" height="57.0" stroke="#fffbfb" strokeType="INSIDE" strokeWidth="0.0" width="1280.0" />
      <AnchorPane layoutX="827.0" layoutY="57.0" prefHeight="664.0" prefWidth="453.0">
         <children>
            <Label layoutX="160.0" layoutY="14.0" text="Order Result">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <AnchorPane fx:id="tableLayout" layoutX="15.0" layoutY="49.0" prefHeight="557.0" prefWidth="419.0" />
         </children>
      </AnchorPane>
      <TabPane fx:id="tabPaneMenu" layoutY="56.0" prefHeight="664.0" prefWidth="828.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab fx:id="GrilledTab"     closable="false" text="Grilled" >
                <ScrollPane fx:id="scrollGrilled"  content="$menuBarGrilled"/>
            </Tab>
          <Tab fx:id="DelicatessenTab"  closable="false" text="Delicatessen"    content="$menuBarDelicatessen"/>
          <Tab fx:id="DessertTab"       closable="false" text="Dessert"         content="$menuBarDessert"/>
          <Tab fx:id="BeverageTab"      closable="false" text="Beverage"        content="$menuBarBeverage"/>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
